<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/scannerFragment">

    <fragment
        android:id="@+id/scannerFragment"
        android:name="com.team03.dtuevent.ui.fragment.ScanFragment"
        android:label="@string/scan"
        tools:layout="@layout/fragment_scan" >
        <action
            android:id="@+id/action_scannerFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.team03.dtuevent.ui.fragment.HistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_history" >
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.team03.dtuevent.ui.fragment.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/preferencesFragment"
        android:name="com.team03.dtuevent.ui.fragment.PreferencesFragment"
        android:label="PreferencesFragment"/>

</navigation>