<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <SearchView
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false">

        <requestFocus />
    </SearchView>

    <ProgressBar
        android:visibility="invisible"
        android:layout_below="@+id/search"
        android:id="@+id/pgb_loading"
        android:layout_gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search">

        <TextView
            android:id="@+id/tv_st_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Ten Sinh Vien"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_st_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_st_name"
            android:layout_marginHorizontal="16dp"
            android:text="1234567890"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_st_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_st_code"
            android:layout_marginHorizontal="16dp"
            android:text="k25 - CMU TPM3"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textSize="14dp" />
        <Button
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:text="Attend"
            android:id="@+id/btn_attend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_below="@+id/search"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_not_fond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Not Found"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textSize="32dp" />

</RelativeLayout>